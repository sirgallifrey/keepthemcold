{
  "name": "keepthemcold",
  "version": "0.0.1",
  "description": "Monitor current temperature of each beer container​ ​and​​ notifies​ when​ the​ temperatures​ are​ outside​ the​ correct​ range",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "webpack-dev-server --config ./webpack.config.js --mode development",
    "build": "webpack --config ./webpack.config.js --mode production",
    "start-server": "nodemon --watch src/server src/server/index.js",
    "lint": "eslint src spec",
    "e2e-chromium": "testcafe chromium e2e/features/*.feature.js -Ss screenshots -c 1 --app \"npm start\"",
    "e2e-chrome": "testcafe chrome e2e/features/*.feature.js -Ss screenshots -c 1 --app \"npm start\"",
    "e2e-firefox": "testcafe firefox e2e/features/*.feature.js -Ss screenshots -c 1 --app \"npm start\"",
    "e2e": "testcafe chrome,firefox e2e/features/*.feature.js -Ss screenshots -c 1 --app \"npm start\""
  },
